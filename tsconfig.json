{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "outDir": "dist",
        "baseUrl": ".",
        "rootDir": "src",
        "paths": {
            "@src/*": ["src/*", "*/src/"],
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": ["src/**/*"],

}